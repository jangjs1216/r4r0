{
  "$id": "contracts/frontend/auth.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AuthViewProps",
  "type": "object",
  "required": [
    "session",
    "exchangeKeys"
  ],
  "properties": {
    "session": {
      "type": "object",
      "required": [
        "status",
        "security"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "authenticated",
            "locked",
            "unauthenticated"
          ]
        },
        "security": {
          "type": "object",
          "properties": {
            "mfaEnabled": {
              "type": "boolean"
            },
            "lastLogin": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    },
    "exchangeKeys": {
      "type": "array",
      "description": "List of registered exchange API keys",
      "items": {
        "type": "object",
        "required": [
          "id",
          "exchange",
          "label",
          "publicKeyMasked",
          "status",
          "permissions"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "exchange": {
            "type": "string",
            "enum": [
              "binance",
              "upbit",
              "okx",
              "bybit"
            ]
          },
          "label": {
            "type": "string"
          },
          "publicKeyMasked": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "expired",
              "invalid"
            ]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "read",
                "trade",
                "withdraw"
              ]
            }
          }
        }
      }
    },
    "supportedExchanges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "iconUrl": {
            "type": "string"
          }
        }
      }
    },
    "onAddKey": {
      "description": "Handler to add a new exchange key"
    },
    "onDeleteKey": {
      "description": "Handler to remove an exchange key"
    }
  }
}